{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Claim",
  "description": "Claim provided by a service",
  "type": "object",
  "properties": {
    "claimant": {
      "description": "Short name of the service used for subscription",
      "value": "string"
    },
    "subject": {
      "description": "Subject of the predicate (claim)",
      "type": "object",
      "properties": {
        "type": {
          "description": "Type of persistent identifier (e.g. INSPIRE_RECORD_ID)",
          "type": "string"
        },
        "value": {
          "description": "Actual value of the identifier",
          "type": "string"
        }
      },
      "required": ["type", "value"],
      "additionalProperties": false
    },
    "claim": {
      "description": "Type of claim",
      "type": "object",
      "properties": {
        "predicate": {
          "description": "Predicate of the claim",
          "type": "string",
          "enum": ["is_same_as", "is_different_than", "is_erratum_of", "is_superseded_by", "is_cited_by", "is_software_for", "is_dataset_for"]
        },
        "created": {
          "description": "Datetime in which the claim was created",
          "type": "string",
          "format": "date-time"
        },
        "certainty": {
          "description": "Certainty of the claim (0 to 1.0)",
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "arguments": {
          "description": "Arguments supporting the certainty",
          "type": "object",
          "properties": {
            "human": {
              "description": "The claim was done by a human or an algorithm",
              "type": "number",
              "enum": [0, 1]
            },
            "actor": {
              "description": "Who assessed the certainty",
              "type": "string"
            },
            "role": {
              "description": "Role of the actor",
              "type": "string"
            }
          }
        }
      },
      "required": ["predicate", "certainty"]
    },
    "object": {
      "description": "Object of the predicate (claim)",
      "type": "object",
      "properties": {
        "type": {
          "description": "Type of persistent identifier (e.g. INSPIRE_RECORD_ID)",
          "type": "string"
        },
        "value": {
          "description": "Actual value of the identifier",
          "type": "string"
        }
      },
      "required": ["type", "value"],
      "additionalProperties": false
    }
  },
  "required": ["claimant", "subject", "claim", "object"],
  "additionalProperties": false
}
